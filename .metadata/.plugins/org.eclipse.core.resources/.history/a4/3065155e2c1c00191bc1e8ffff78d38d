package org.bostic.Test;

import java.util.Scanner;

/**
 * Hello world!
 *
 */
public class App {
    public static void main( String[] args ){
        String ss = "This is a string for the scanner to read";
        Scanner kbd = new Scanner(ss);

        while(kbd.hasNext()) {
        	System.out.println(kbd.next());
        }
        kbd.close();
    }
	public String toPigLatin(String string) {
		String[] input = string.split("[\\s]");
		StringBuilder sb = new StringBuilder();
		for(String s : input) {
			if (s.charAt(0) == 'a' |s.charAt(0) == 'e'|s.charAt(0) == 'i'|s.charAt(0) == 'o'|s.charAt(0) == 'u') {
				 sb.append(s).append("way");
			}
		}
		
		return null;
	}
}
